<tr class="border-b border-gray-200 hover:bg-gray-100">
  <td class="py-3 px-6 text-left whitespace-nowrap">
    <span class="font-medium"><%= food.name %></span>
  </td>

  <td class="py-3 px-6 text-center">
    <div class="flex items-center">
      <span><%= food.description %></span>
    </div>
  </td>

  <td class="py-3 px-6 text-center">
    <span class="bg-cyan-200 text-cyan-800 py-1 px-3 rounded-full text-xs">
      <%= food.calories %>
    </span>
  </td>

  <td class="py-3 px-6 text-center">
    <span class="bg-blue-200 text-blue-800 py-1 px-3 rounded-full text-xs">
      <%= food.carbohydrates%>
    </span>
  </td>

  <td class="py-3 px-6 text-center">
    <span class="bg-red-200 text-red-800 py-1 px-3 rounded-full text-xs">
      <%= food.fats %>
    </span>
  </td>

  <td class="py-3 px-6 text-center">
    <span class="bg-purple-200 text-purple-800 py-1 px-3 rounded-full text-xs">
      <%= food.protein %>
    </span>
  </td>
  <td class="py-3 px-6 text-center flex justify-center">
    <%= link_to edit_food_path(food),
                data: { turbo_frame: 'modal' },
                class: 'w-4 mr-2 transform hover:text-purple-500 hover:scale-110 cursor-pointer' do %>
      <%= embedded_svg 'icons/edit.svg' %>
    <% end %>
    <%= button_to food_path(food), 
                  class: 'w-4 mr-2 transform hover:text-purple-500 hover:scale-110 cursor-pointer',
                  method: :delete, data: { turbo_confirm: 'are you sure?' } do %>
       <%= embedded_svg 'icons/delete.svg' %>
    <% end %>
  </td>
</tr>
