<%= turbo_frame_tag "modal" do %>
  <%= tag.div data: { controller: "turbo-modal", action: "turbo:submit-end->turbo-modal#submitEnd" } do %>
    <div
      class="fixed inset-0 flex items-center justify-center h-screen w-screen bg-black bg-opacity-40 backdrop-filter backdrop-blur-lg z-10 animated fadeInUp"
    >
      <div
        class="flex-grow max-w-screen-sm rounded-xl bg-gray-100 flex flex-col"
        data-turbo-modal-target="modal"
        data-action="click@window->turbo-modal#outsideClose"
      >
        <div class="px-7 pt-7">
          <h1 class="font-bold text-2xl">Add Exercise in <%= @category.name %></h1>
        </div>
        <div>
          <%= form_with scope: :category_exercise, url: category_exercises_path, data: { turbo_frame: '_top' } do |f| %>
            <div>
              <div class="py-10 px-7 flex flex-col gap-6">
                <div class="grid grid-cols-6 text-xl items-center">
                  <p class='font-bold'> Repetition Exercises </p>
                  <%= f.collection_check_boxes :repetition, @rep_exercises, :id, :name %>
                </div>
                <div class="grid grid-cols-6 text-xl items-center">
                  <p class='font-bold'> Timed Exercises </p>
                  <%= f.collection_check_boxes :timed, @timed_exercises, :id, :name %>
                </div>
              </div>
              <div
                class="bg-gray-200 px-7 py-4 flex flex-row-reverse gap-3 items-center font-medium text-lg rounded-b-xl"
              >
                <%= f.submit 'Add Exercises', class: "px-4 py-2 bg-green-500 text-white rounded-xl" %>
                <button data-action="turbo-modal#hideModal">Cancel</button>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
