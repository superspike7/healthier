<%= form_with url: profile_report_user_index_path(params[:profile_id]) do |form| %>

    <%= form.label "Please select a reason:"%>

      <%= form.text_field :report_type, value: "USER" %>

      <%= form.radio_button :reason, 'Fake account', :checked => true %> 
      <%= form.label 'Fake account'%>
      
      <%= form.radio_button :reason, 'Fake name' %>
      <%= form.label 'Fake name' %>

      <%= form.radio_button :reason, 'Pretending to be someone' %>
      <%= form.label 'Pretending to be someone' %>

      <%= form.radio_button :reason, 'Posting inappropriate things' %>
      <%= form.label 'Posting inappropriate things' %>

      <%= form.radio_button :reason, 'Suspicious or spam' %>
      <%= form.label 'Suspicious or spam' %>

      <%= form.submit "SUBMIT REPORT" %>

<% end %>