<div class="w-full h-full p-8 bg-gray-300">
  <div class="w-full h-full grid grid-cols-3 grid-rows-4 gap-8">
    <div class="bg-gray-50 rounded-xl p-4 flex items-baseline justify-between">
      <div class="flex flex-col gap-2">
        <p class="text-2xl font-semibold text-gray-600">Total Reports</p>
        <div class="flex justify-between">
          <p class="text-5xl font-bold"><%= @rep_exercises.count %></p>
        </div>
      </div>
      <div class="flex flex-col gap-2">
        <p class="text-2xl font-semibold text-gray-600">Recent Repetition Exercise</p>
        <div class="flex gap-2 items-center">
          <p class="text-4xl font-bold"><%= @rep_exercises.last.name if @rep_exercises.last %></p>
        </div>
      </div>
    </div>

    <div class="bg-gray-50 rounded-xl">New Users (open for suggestion)</div>

    <div class="bg-gray-50 rounded-xl flex items-stretch">
      <%= link_to new_repetition_exercise_path,
                  data: { turbo_frame: 'modal' },
                  class: 'bg-green-300 p-3 rounded-xl flex-1 hover:bg-green-200
                  flex items-center justify-center flex-col gap-2' do %>

        <p class="font-bold text-center text-3xl">New Repetition Exercise</p>
        <%= embedded_svg 'icons/plus.svg', class: 'h-12 w-12 stroke-black' %>
      <% end %>
    </div>

    <div class="bg-gray-50 col-span-3 row-span-3 overflow-y-auto rounded-xl">
      <table class="min-w-max w-full table-auto">
        <thead>
          <tr
            class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal"
          >
            <th class="py-3 px-6 text-left">Name</th>

            <th class="py-3 px-6 text-left">Description</th>

            <th class="py-3 px-6 text-left">Reps</th>

            <th class="py-3 px-6 text-left">Sets</th>

            <th class="py-3 px-6 text-center">Status</th>

            <th class="py-3 px-6 text-center">Actions</th>
          </tr>
        </thead>

        <tbody class="text-gray-600 text-sm font-light">
          <% @rep_exercises.each do |exercise| %>
          <tr class="border-b border-gray-200 hover:bg-gray-100">
            <td class="py-3 px-6 text-left whitespace-nowrap">
              <div class="flex items-center">
                <span class="font-medium"><%= exercise.name %></span>
              </div>
            </td>

            <td class="py-3 px-6 text-center">
              <div class="flex items-center">
                <span><%= exercise.description %></span>
              </div>
            </td>

            <td class="py-3 px-6 text-center">
              <div class="flex items-center">
                <span><%= exercise.repetition %></span>
              </div>
            </td>

            <td class="py-3 px-6 text-center">
              <div class="flex items-center">
                <span><%= exercise.set %></span>
              </div>
            </td>

            <td class="py-3 px-6 text-center">
              <span class="bg-green-200 text-green-800 py-1 px-3 rounded-full text-xs">
                Finished
              </span>
            </td>

            <td class="py-3 px-6 text-center flex justify-center">
              <%= link_to admin_report_path(1),
                          data: { turbo_frame: 'modal' },
                          class: 'w-4 mr-2 transform hover:text-purple-500 hover:scale-110 cursor-pointer' do %>
                <%= embedded_svg 'icons/eye.svg' %>
              <% end %>
              <%= button_to admin_report_path(1), 
                            class: 'w-4 mr-2 transform hover:text-purple-500 hover:scale-110 cursor-pointer',
                            method: :delete, data: { turbo_confirm: 'are you sure?' } do %>
                 <%= embedded_svg 'icons/delete.svg' %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
