<% @meals.each do |meal|%>
  <div class='flex flex-col'>
    <%= link_to meal.name, meal_path(meal), class: 'text-xl font-bold'%>
    <p> Description: <%= meal.description %> </p>
    <%= button_to "Delete #{meal.name}", meal_path(meal), method: :delete %>
    <%= link_to "Edit #{meal.name}", edit_meal_path(meal) %>
  </div>
<% end %>
