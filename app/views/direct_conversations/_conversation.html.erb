<%# unless conversation.messages.count.zero? %>
  <div class='bg-slate-100 mb-2' id="<%= dom_id(conversation) %>">
    <%= link_to conversation.show_conversation_name(@logged_in_user), direct_conversation_path(conversation) %>
    <p>Unread Count: <%= conversation.unread_notifications_count(@logged_in_user) %></p>
  </div>
<%# end %>

