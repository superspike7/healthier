<div class="w-full h-full p-8 bg-gray-300">
  <div class="w-full h-full grid grid-cols-3 grid-rows-4 gap-8">
    <div class="bg-gray-50 rounded-xl p-4 flex items-baseline justify-between">
      <div class="flex flex-col gap-2">
        <p class="text-2xl font-semibold text-gray-600">Total Users</p>
        <div class="flex justify-between">
          <p class="text-5xl font-bold"><%= @users.count %></p>
        </div>
      </div>
      <div class="flex flex-col gap-2">
        <p class="text-2xl font-semibold text-gray-600">Newest User</p>
        <div class="flex justify-between gap-2 items-center">
          <div>
            <%= image_tag @newest_user.avatar.attached? ? @newest_user.avatar : 'default_profile.png', class: 'w-14 h-14 rounded-full' %>
          </div>
          <p class="text-4xl font-bold"><%= @newest_user.username %></p>
        </div>
      </div>
    </div>

    <div class="bg-gray-50 rounded-xl">New Users (open for suggestion)</div>

    <div class="bg-gray-50 rounded-xl">Top Gainers (open for suggestion)</div>

    <div class="bg-gray-50 col-span-3 row-span-3 overflow-y-auto rounded-xl">
      <table class="min-w-max w-full table-auto">
        <thead>
          <tr
            class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal"
          >
            <th class="py-3 px-6 text-left">Username</th>

            <th class="py-3 px-6 text-left">Email</th>

            <th class="py-3 px-6 text-left">Recent Exercise</th>

            <th class="py-3 px-6 text-left">Recent Intake</th>

            <th class="py-3 px-6 text-center">Status</th>

            <th class="py-3 px-6 text-center">Actions</th>
          </tr>
        </thead>

        <tbody class="text-gray-600 text-sm font-light">
          <% @users.each do |user| %>
          <tr class="border-b border-gray-200 hover:bg-gray-100">
            <td class="py-3 px-6 text-left whitespace-nowrap">
              <div class="flex items-center">
                <div class="mr-2">
                  <%= image_tag user.avatar.attached? ? user.avatar : 'default_profile.png', class: 'w-6 h-6 rounded-full' %>
                </div>

                <span class="font-medium"><%= user.username %></span>
              </div>
            </td>

            <td class="py-3 px-6 text-left">
              <div class="flex items-center">
                <span><%= user.email %>
                </span>
              </div>
            </td>

            <td class="py-3 px-6 text-center">
              <div class="flex items-center">
                <span>7km Jogging 1hr (sample lang to)</span>
              </div>
            </td>

            <td class="py-3 px-6 text-center">
              <div class="flex items-center">
                <span>1pc Banana (sample lang to)</span>
              </div>
            </td>

            <td class="py-3 px-6 text-center">
              <span
                class="bg-green-200 text-green-800 py-1 px-3 rounded-full text-xs"
                >Active</span
              >
            </td>

            <td class="py-3 px-6 text-center flex justify-center">
              <%= link_to admin_user_path(user), class: 'w-4 mr-2 transform hover:text-purple-500 hover:scale-110 cursor-pointer' do %>
                <%= embedded_svg 'icons/eye.svg' %>
              <% end %>
              <%= link_to edit_admin_user_path(user), class: 'w-4 mr-2 transform hover:text-purple-500 hover:scale-110 cursor-pointer' do %>
                 <%= embedded_svg 'icons/edit.svg' %>
              <% end %>
              <%= button_to admin_user_path(user), 
                            class: 'w-4 mr-2 transform hover:text-purple-500 hover:scale-110 cursor-pointer',
                            method: :delete, data: { turbo_confirm: 'are you sure?' } do %>
                 <%= embedded_svg 'icons/delete.svg' %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
