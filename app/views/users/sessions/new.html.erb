<div class="mx-auto max-w-lg h-40 py-4 px-2 flex flex-col gap-5 mt-14">
  <%= button_to "Sign in with Google", '/auth/google', data: {turbo: false},
                class: "w-full rounded-full border border-gray-700 text-gray-700 text-xl text-center py-2 uppercase font-medium" %>
  
  <div class="border-gray-800 border w-full">
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
    <div class="flex flex-col gap-5">
    
      <div class="flex flex-col gap-2">
        <%= f.label :email, class: 'font-bold' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'johndoe@gmail.com',
                                  class: "border border-gray-800 text-lg py-2 px-3 " %>
      </div>
      
      
      <div class="flex flex-col gap-2">
        <%= f.label :password, class: 'font-bold' %>
        <%= f.email_field :password, placeholder: '*********',
                                  class: "border border-gray-800 text-lg py-2 px-3" %>
      </div>
      
      <% if devise_mapping.rememberable? %>
        <div class="field text-xl flex gap-2">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      
      <%= f.submit "Log in", class: "w-full bg-green-500 font-bold py-2 rounded-full text-xl cursor-pointer" %>
    
    <% end %>

    </div>
  <div class="border-gray-800 border w-full">
  </div>
  
  <%= render "users/shared/links" %>

  </div>


