<%= turbo_frame_tag 'dashboard_tab_upper' do %>
    <div class="flex flex-col gap-3 h-full">
    <div class="flex gap-5 items-center justify-between">
      <div class="flex gap-2">
        <%= link_to "Daily Intakes", daily_intakes_path,
                    class: 'font-semibold text-2xl text-green-800 hover:underline decoration-2' %>
        <%= link_to "Routines", routines_path,
                    class: 'font-semibold text-2xl text-green-800 opacity-50 hover:underline decoration-2' %>
      </div>
      <div class="flex gap-3 items-center">
        <%= link_to "+ Food", new_daily_intake_food_path,
                    data: {turbo_frame: 'modal'},
                    class: 'border border-green-500 text-green-500 font-bold text-lg p-2 rounded-md'%>

        <%= link_to "+ Meal", new_daily_intake_meal_path,
                    data: {turbo_frame: 'modal'},
                    class: 'bg-green-500 text-white font-bold text-lg p-2 rounded-md'%>
        <%= button_to daily_intakes_path, class: 'bg-green-500 text-white font-bold text-lg p-2 rounded-md' do %>
          <%= embedded_svg 'icons/refresh.svg' %>
        <% end %>
      </div>
    </div>
    <div class="w-full h-full grid grid-cols-2 gap-5">
      <div class="<%= nutrient_background_color(@nutrients_description.calories) %> flex flex-col justify-center gap-2 items-center rounded-xl">
        <p class="text-xl font-light text-gray-600">Calories</p>
        <p class="text-2xl font-black"><%= @daily_intake_today.total_calories %></p>
        <p class="text-md text-gray-700"><%= @nutrients_description.calories %></p>
      </div>
      <div class="<%= nutrient_background_color(@nutrients_description.carbohydrates) %> flex flex-col justify-center gap-2 items-center rounded-xl">
        <p class="text-xl font-light text-gray-600">Carbohydrates</p>
        <p class="text-2xl font-black"><%= @daily_intake_today.total_carbohydrates %>(g)</p>
        <p class="text-md text-gray-700"><%= @nutrients_description.carbohydrates %></p>
      </div>
      <div class="<%= nutrient_background_color(@nutrients_description.fats) %> flex flex-col justify-center gap-2 items-center rounded-xl">
        <p class="text-xl font-light text-gray-600">Fats</p>
        <p class="text-2xl font-black"><%= @daily_intake_today.total_fats %>(g)</p>
        <p class="text-md text-gray-700"><%= @nutrients_description.fats %></p>
      </div>
      <div class="<%= nutrient_background_color(@nutrients_description.protein) %> flex flex-col justify-center gap-2 items-center rounded-xl">
        <p class="text-xl font-light text-gray-600">Protein</p>
        <p class="text-2xl font-black"><%= @daily_intake_today.total_protein %>(g)</p>
        <p class="text-md text-gray-700"><%= @nutrients_description.protein %></p>
      </div>
    </div>
  </div>
<% end %>
