<%= form_with scope: :routine, url: routines_path,  data: { turbo_frame: '_top' } do |f| %>
  <div>
    <div class="py-10 px-7 flex flex-col gap-6">
      <div class="grid grid-cols-6 text-xl items-center">
        <%= f.label :name, class: "col-span-2 text-gray-700" %>
        <%= f.text_field :name, class: "col-span-4 p-1 px-2 rounded-xl border border-gray-400" %>
      </div>
      <div class="grid grid-cols-6 text-xl items-center">
        <%= f.label :description, class: "col-span-2 text-gray-700" %>
        <%= f.text_field :description, class: "col-span-4 p-1 px-2 rounded-xl border border-gray-400" %>
      </div>
      <div class="grid grid-cols-6 text-xl items-center grid-rows-2 pt-5">
        <label class="col-span-2 text-gray-700 row-end-2">Timed Exercise</label>
        <%= f.select :timed, 
                       options_from_collection_for_select(current_user.timed_exercises, "id", "name"),
                       {},
                       class: 'col-span-4', data: {controller: "tom-select", "url": '/timed/new?name='},
                       multiple: true, placeholder: 'add timed exercise' %>
      </div>
      <div class="grid grid-cols-6 text-xl items-center grid-rows-2">
        <label class="col-span-2 text-gray-700 row-end-2">Rep Exercise</label>
        <%= f.select :repetition, 
                       options_from_collection_for_select(current_user.repetition_exercises, "id", "name"),
                       {},
                       class: 'col-span-4', data: {controller: "tom-select", "url": '/repetitions/new?name='},
                       multiple: true, placeholder: 'add rep exercise' %>
      </div>
    </div>

    <div
      class="bg-gray-200 px-7 py-4 flex flex-row-reverse gap-3 items-center font-medium text-lg rounded-b-xl"
    >
      <%= f.submit 'Create Routine', class: "px-4 py-2 bg-green-500 text-white rounded-xl" %>
      <button data-action="turbo-modal#hideModal">Cancel</button>
    </div>
  </div>
<% end %>

