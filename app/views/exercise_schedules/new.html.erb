<%= turbo_frame_tag "modal" do %>
  <%= tag.div data: { controller: "turbo-modal", action: "turbo:submit-end->turbo-modal#submitEnd" } do %>
    <div
      class="fixed inset-0 flex items-center justify-center h-screen w-screen bg-black bg-opacity-40 backdrop-filter backdrop-blur-lg z-10 animated fadeInUp"
    >
      <div
        class="flex-grow max-w-screen-sm rounded-xl bg-gray-100 flex flex-col"
      >
        <div class="px-7 pt-7">
          <h1 class="font-bold text-2xl">Add Exercise Schedule</h1>
        </div>
        <div>
          <%= form_with scope: :exercise_schedule, url: exercise_schedules_path, data: { turbo_frame: '_top' } do |f| %>
            <div>
              <div class="py-10 px-7 flex flex-col gap-6">
                <div class="grid grid-cols-6 text-xl items-center">
                  <%= f.label :name, class: "col-span-2 text-gray-700" %>
                  <%= f.collection_select :name, @exercises, :name, :name, {}, class: "col-span-4 p-1 px-2 rounded-xl border border-gray-400" %>
                </div>
                <div class="grid grid-cols-6 text-xl items-center">
                  <%= f.label :start, class: "col-span-2 text-gray-700" %>
                  <%= f.text_field :start, data: {controller: "flatpickr", flatpickr_enable_time: "true"},
                                   class: 'col-span-4 p-1 px-2 rounded-xl border border-gray-400', value: 'pick a date' %>
                </div>
                <div class="grid grid-cols-6 text-xl items-center">
                  <%= f.label :end, class: "col-span-2 text-gray-700" %>
                  <%= f.text_field :end, data: {controller: "flatpickr", flatpickr_enable_time: "true"},
                                   class: 'col-span-4 p-1 px-2 rounded-xl border border-gray-400', value: 'pick a date' %>
                </div>
              </div>
              <div
                class="bg-gray-200 px-7 py-4 flex flex-row-reverse gap-3 items-center font-medium text-lg rounded-b-xl"
              >
                <%= f.submit 'Add Exercise Schedule', class: "px-4 py-2 bg-green-500 text-white rounded-xl" %>
                <button data-action="turbo-modal#hideModal">Cancel</button>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
